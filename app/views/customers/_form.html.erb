<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :customer_name, class: 'form-control', placeholder: 'Name' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :customer_email, class: 'form-control', placeholder: 'Email' %>
  </div>

  <div class="form-group">
    <%= form.label :birthday %>
    <%= form.date_select :birthday, id: :customer_birthday , :start_year=>1900 %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :customer_description, class: 'form-control', placeholder: 'Description' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
